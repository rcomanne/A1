<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CinemaTicketSystem</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (ViewBag.HideFooterHeader == null)
    {
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-danger">
        <div class="container">
            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Shows", "Index", "Showing", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Movies", "Index", "Movie", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Print ticket(s)", "Index", "Order", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Route", "Index", "Map", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    }
    <div class="container body-content">
        @RenderBody()
    </div>
    @if (ViewBag.HideFooterHeader == null)
    {
    <footer>
        <div class="container">
            @using (Html.BeginForm("Signup", "NewsletterSignup", FormMethod.Post, new { @class = "form-inline" }))
            {
                @Html.AntiForgeryToken()
                <label class="mb-2 mr-sm-2" for="NewsletterSignupEmail" style="color: black !important;">Schrijf je in voor de nieuwsbrief: </label>
                <input type="email" class="form-control mb-2 mr-sm-2" id="NewsletterSignupEmail" placeholder="E-mailadres" name="Email">
                <button type="submit" class="btn btn-danger mb-2">Submit</button>
            }
        </div>
    </footer>
     }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>