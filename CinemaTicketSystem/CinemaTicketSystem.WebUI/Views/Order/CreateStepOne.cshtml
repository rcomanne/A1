@model CinemaTicketSystem.Domain.Entities.Showing

@{
    ViewBag.Title = "CreateStepOne";
}

@using (Html.BeginForm("CreateStepTwo", "Order", new { id = Model.Id }))
{
    @Html.AntiForgeryToken()
    <div class="form-group row">
        <label for="TicketsAdults" class="col-sm-4">Volwassenen</label>
        <div class="col-sm-8">
            <input type="number" step="1" min="0" value="2" class="form-control" name="TicketsAdults" id="TicketsAdults" />
        </div>
    </div>
    <div class="form-group row">
        <label for="TicketsChildren" class="col-sm-4">Kinderen</label>
        <div class="col-sm-8">
            <input type="number" step="1" min="0" value="0" class="form-control" name="TicketsChildren" id="TicketsChildren" />
        </div>
    </div>
    <div class="row">
        <div class=" col-sm-8 offset-sm-4">
            <button type="submit" class="btn btn-danger">Naar stoelselectie</button>
        </div>
    </div>
}

