@model CinemaTicketSystem.Domain.Entities.Showing

@{
    ViewBag.Title = "Maak nieuwe voorstelling aan";
    List<string> movies = (List<string>)ViewBag.Movies;
    List<int> rooms = (List<int>)ViewBag.Rooms;
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <h4 style="color:white!important">Maak nieuwe voorstelling aan</h4>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Start datum en tijd", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "form-control datepicker", @TextMode = "DateTimeLocal", @type = "datetime-local"  } })
                @Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Film", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Movie, new SelectList(movies), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MovieId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Zaal", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Room, new SelectList(rooms), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("In 3D?", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Is3D)
                    @Html.ValidationMessageFor(model => model.Is3D, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Voorstelling aanmaken" class="btn btn-default" style="color:white; background:red" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
