                @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control"}, })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Verstuur" class="btn btn-default" style="color:white!important;background-color:red" />
            </div>
        </div>
    </div>
}
