                @Html.EditorFor(model => model.MovieExperience, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MovieExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Uw ervaring of de bereikbaarheid", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
