@model CinemaTicketSystem.Domain.Entities.Survey

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="color:white!important">Alvast bedankt voor het invullen van onze enquete!</h4>
        <p style="color:white!important">Als eerst hebben we een aantal vragen over uw ervaring, die u van 1 t/m 10 kunt waarderen, waarvan 10 het hoogst is</p>
        <p>Als laatst hebben we nog een optioneel vak voor eventuele opmerkingen of suggesties</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Uw ervaring of het algemeen", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OverallExperience, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OverallExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Uw ervaring van de film zelf", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
