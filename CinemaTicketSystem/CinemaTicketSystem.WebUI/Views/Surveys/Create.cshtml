                @Html.EditorFor(model => model.TravelExperience, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TravelExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Uw ervaring met onze toiletten", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BathroomExperience, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BathroomExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Uw ervaring met onze winkel", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShopExperience, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ShopExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Uw ervaring met ons eten", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FoodExperience, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FoodExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Uw ervaring met ons personeel", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })})
            <div class="col-md-10">
                @Html.EditorFor(model => model.StaffExperience, new { htmlAttributes = new { @min = "1", @max = "10", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StaffExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Uw opmerking(en) of suggestie(s)", htmlAttributes: new { @class = "control-label col-md-2", style = "color:white!important" })
